    <!-- Cat Cursor Follower -->
    <div id="cat-cursor" style="position:fixed;pointer-events:none;z-index:9999;font-size:28px;transition:transform 0.15s ease-out;will-change:transform,left,top;">üò∫</div>
    <script is:inline>
        (function() {
            const cat = document.getElementById('cat-cursor');
            let mouseX = -100, mouseY = -100;
            let catX = -100, catY = -100;
            document.addEventListener('mousemove', function(e) {
                mouseX = e.clientX;
                mouseY = e.clientY;
            });
            function animate() {
                catX += (mouseX - catX) * 0.15;
                catY += (mouseY - catY) * 0.15;
                cat.style.left = catX + 'px';
                cat.style.top = catY + 'px';
                const dx = mouseX - catX;
                const scaleX = dx < -1 ? -1 : 1;
                cat.style.transform = 'translate(-50%, -50%) scaleX(' + scaleX + ')';
                requestAnimationFrame(animate);
            }
            animate();
        })();
    </script>

